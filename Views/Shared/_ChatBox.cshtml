<div id="chat-container" class="chat-container fixed bottom-0 right-4 w-80 bg-background-dark border border-white/10 rounded-t-lg shadow-[0_0_20px_rgba(0,0,0,0.5)] transform translate-y-[110%] transition-transform duration-300 z-50 flex flex-col h-[400px]">
    <!-- Header -->
    <div class="h-12 bg-primary/10 border-b border-white/5 flex items-center justify-between px-4 cursor-pointer hover:bg-primary/20 transition-colors" onclick="toggleChat()">
        <div class="flex items-center gap-2">
            <span class="relative flex h-3 w-3">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-3 w-3 bg-primary"></span>
            </span>
            <span id="chat-username" class="text-white font-bold text-sm tracking-wide">Select a user</span>
        </div>
        <div class="flex items-center gap-2">
             <button onclick="event.stopPropagation(); closeChat()" class="text-white/50 hover:text-white material-symbols-outlined text-[18px]">close</button>
        </div>
    </div>

    <!-- Body -->
    <div id="chat-body" class="flex-1 overflow-y-auto p-4 flex flex-col gap-3 bg-background-dark">
        <!-- Messages will be appended here -->
        <div class="text-center text-white/30 text-xs mt-4">Start of conversation</div>
    </div>

    <!-- Footer -->
    <div class="p-3 bg-white/5 border-t border-white/5">
        <div class="flex gap-2">
            <input type="text" id="chat-input" placeholder="Type a message..." class="flex-1 bg-black/20 border border-white/10 rounded-full px-4 py-2 text-sm text-white focus:outline-none focus:border-primary/50 transition-colors" onkeypress="handleChatInput(event)">
            <button onclick="sendMessage()" class="bg-primary/20 hover:bg-primary/40 text-primary rounded-full p-2 flex items-center justify-center transition-colors">
                <span class="material-symbols-outlined text-[20px]">send</span>
            </button>
        </div>
    </div>
</div>
