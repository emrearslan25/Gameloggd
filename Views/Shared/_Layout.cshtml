<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameLoggd</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="site-header">
        <div class="header-container">
            <div class="header-left">
                <h1 class="logo">GameLoggd</h1>
                
                <nav class="main-nav">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    <a href="/games" class="nav-link">Games</a>
                    <a asp-controller="List" asp-action="Index" class="nav-link">Lists</a>
                    <a href="/casino" class="nav-link" style="color: var(--neon-cyan); text-shadow: 0 0 5px var(--neon-cyan);">Casino</a>
                    <a href="/members" class="nav-link">Members</a>
                </nav>
            </div>

            <div class="header-right">
                <div class="search-box">
                    <svg class="search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <input type="text" placeholder="Search games..." class="search-input" />
                </div>
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="user-menu-container">
                        <button class="user-avatar" onclick="document.getElementById('userDropdown').classList.toggle('show')" aria-label="User menu">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </button>
                        <div id="userDropdown" class="user-dropdown-content">
                            <div class="dropdown-header">
                                <span>@User.Identity.Name</span>
                            </div>
                            <div class="dropdown-divider"></div>
                            <a href="/user/@(Uri.EscapeDataString(User.Identity.Name!))" class="dropdown-item">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                Profile
                            </a>
                            <form method="post" action="/account/logout" style="margin:0; padding:0;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item logout-btn">
                                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="mr-2">
                                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                                        <polyline points="16 17 21 12 16 7"></polyline>
                                        <line x1="21" y1="12" x2="9" y2="12"></line>
                                    </svg>
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <a href="/account" class="user-avatar" aria-label="Login">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </a>
                }
            </div>
        </div>
    </header>

    <main>
        @if (TempData["StatusMessage"] != null)
        {
            <div style="max-width: 1200px; margin: 1rem auto; padding: 1rem; background: #222; border: 1px solid var(--neon-cyan); border-radius: 8px; color: white; display: flex; align-items: center; justify-content: space-between;">
                <span>@TempData["StatusMessage"]</span>
                <button onclick="this.parentElement.style.display='none'" style="background:none; border:none; color:#888; cursor:pointer;">âœ•</button>
            </div>
        }
        @RenderBody()
    </main>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Close the dropdown if the user clicks outside of it
        window.onclick = function(event) {
            if (!event.target.closest('.user-menu-container')) {
                var dropdowns = document.getElementsByClassName("user-dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
