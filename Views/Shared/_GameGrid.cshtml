@model List<GameLoggd.Models.Domain.Game>

@if (Model.Any())
{
    <div class="games-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 2rem;">
        @foreach (var game in Model)
        {
            <a href="/game/@game.Slug" class="game-card" style="text-decoration: none; color: inherit; display: block; position: relative; transition: transform 0.2s;">
                <div style="aspect-ratio: 2/3; background: #333; border-radius: 8px; overflow: hidden; margin-bottom: 0.5rem;">
                    <img src="@(string.IsNullOrEmpty(game.ImagePath) ? "/images/placeholder.jpg" : game.ImagePath)" alt="@game.Title" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <div style="font-size: 0.9rem; font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@game.Title</div>
            </a>
        }
    </div>
}
else
{
    <div style="text-align: center; color: #666; padding: 2rem;">No games found.</div>
}
