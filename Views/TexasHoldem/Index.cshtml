@model GameLoggd.Models.Poker.TexasHoldemGame

@{
    ViewData["Title"] = "Texas Hold'em";
}

<div class="w-full min-h-screen pt-24 pb-12 px-4 flex flex-col items-center">
    
    <!-- Game Logo -->
    <div class="mb-8 text-center space-y-2 animate-slide-in-up">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-yellow-500/20 border border-yellow-500/50 text-4xl mb-4 shadow-[0_0_30px_rgba(234,179,8,0.3)]">
            üèÜ
        </div>
        <h1 class="text-4xl md:text-5xl font-black font-display text-white tracking-tighter uppercase drop-shadow-[0_0_15px_rgba(234,179,8,0.5)]">
            Texas Hold'em
        </h1>
        <p class="text-yellow-500/70 font-mono text-sm tracking-widest uppercase">Heads Up ‚Ä¢ No Limit</p>
    </div>

    <!-- Game Table -->
    <div class="w-full max-w-4xl bg-[#050505] border border-yellow-500/30 rounded-3xl p-4 md:p-8 relative overflow-hidden shadow-[0_0_50px_rgba(234,179,8,0.15)] flex flex-col justify-between min-h-[700px]">
        
        <!-- Background Decorations -->
        <div class="absolute inset-0 opacity-20 pointer-events-none" style="background-image: radial-gradient(circle at 50% 50%, rgba(234,179,8,0.1) 0%, transparent 50%);"></div>
        <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-yellow-500 to-transparent opacity-50"></div>

        <!-- Dealer Area (Top) -->
        <div class="flex flex-col items-center gap-4 z-10 relative">
            <div class="relative">
                <div class="inline-flex items-center gap-2 px-4 py-1 rounded-full bg-yellow-500/10 border border-yellow-500/20 text-yellow-500 text-xs font-bold uppercase tracking-widest">
                    Dealer
                </div>
                <!-- Dealer Message Bubble -->
                <div id="dealer-msg" class="absolute left-full top-0 ml-4 py-2 px-4 bg-black border border-white/20 rounded-xl rounded-tl-none text-white text-xs font-bold whitespace-nowrap opacity-0 transition-opacity duration-300 shadow-lg z-20">
                    Check
                </div>
            </div>

            <div class="flex justify-center gap-2 md:gap-4 min-h-[140px]" id="dealer-cards">
                <!-- Dealer Cards -->
            </div>

            <div class="px-4 py-2 bg-black/50 border border-white/10 rounded-lg backdrop-blur text-center">
                <div class="text-[0.6rem] font-bold uppercase text-white/30 tracking-wider">Chips</div>
                <div class="font-mono font-bold text-white text-lg" id="dealer-chips">@Model.DealerChips</div>
            </div>
        </div>

        <!-- Community Area (Center) -->
        <div class="flex flex-col items-center justify-center gap-6 my-8 z-10">
            
            <!-- Pot Display -->
            <div class="px-8 py-2 rounded-full bg-black/60 border border-yellow-500/30 shadow-[0_0_20px_rgba(234,179,8,0.1)] flex items-center gap-3">
                <span class="text-xs font-bold uppercase text-white/50 tracking-wider">Pot</span>
                <span class="text-2xl font-mono font-bold text-yellow-400" id="pot-amount">0</span>
            </div>

            <!-- Community Cards -->
            <div class="flex justify-center gap-2 md:gap-4 min-h-[140px] px-4 py-6 rounded-2xl bg-white/5 border border-white/5 w-full max-w-2xl" id="community-cards">
                <!-- Community Cards -->
            </div>

            <div id="game-status-text" class="text-white/40 font-mono text-xs uppercase tracking-widest">Pre-Flop</div>
        </div>

        <!-- Player Area (Bottom) -->
        <div class="flex flex-col items-center gap-6 z-10 mt-auto">
            
            <div class="flex justify-center gap-2 md:gap-4 min-h-[140px]" id="player-cards">
                <!-- Player Cards -->
            </div>

            <div class="w-full flex items-center justify-between px-4 md:px-12">
                <div class="flex flex-col items-center">
                    <div class="px-4 py-2 bg-black/50 border border-white/10 rounded-lg backdrop-blur text-center mb-2">
                        <div class="text-[0.6rem] font-bold uppercase text-white/30 tracking-wider">Credits</div>
                        <div class="font-mono font-bold text-primary text-lg" id="player-chips">@Model.PlayerChips</div>
                    </div>
                    <div class="inline-flex items-center gap-2 px-4 py-1 rounded-full bg-accent-cyan/10 border border-accent-cyan/20 text-accent-cyan text-xs font-bold uppercase tracking-widest">
                        You
                    </div>
                </div>

                <!-- Controls -->
                <div class="flex gap-2" id="game-controls">
                    <button class="px-4 py-2 md:px-6 md:py-3 bg-red-500/10 border border-red-500/50 text-red-500 rounded-lg font-bold uppercase text-xs hover:bg-red-500 hover:text-white transition-all disabled:opacity-50 disabled:cursor-not-allowed action-btn" onclick="sendAction('fold')">Fold</button>
                    <button class="px-4 py-2 md:px-6 md:py-3 bg-blue-500/10 border border-blue-500/50 text-blue-500 rounded-lg font-bold uppercase text-xs hover:bg-blue-500 hover:text-white transition-all disabled:opacity-50 disabled:cursor-not-allowed action-btn" onclick="sendAction('check')">Check</button>
                    <button class="px-4 py-2 md:px-6 md:py-3 bg-green-500/10 border border-green-500/50 text-green-500 rounded-lg font-bold uppercase text-xs hover:bg-green-500 hover:text-white transition-all disabled:opacity-50 disabled:cursor-not-allowed action-btn" onclick="sendAction('call')">Call</button>
                    <button class="px-4 py-2 md:px-6 md:py-3 bg-yellow-500/10 border border-yellow-500/50 text-yellow-500 rounded-lg font-bold uppercase text-xs hover:bg-yellow-500 hover:text-black transition-all disabled:opacity-50 disabled:cursor-not-allowed action-btn" onclick="sendAction('raise')">Raise</button>
                </div>
            </div>

            <div id="start-area" class="w-full text-center mt-4">
                <button class="w-full md:w-auto px-12 py-4 bg-yellow-500 text-black font-black uppercase tracking-widest rounded-xl hover:bg-white hover:scale-105 hover:shadow-[0_0_30px_rgba(234,179,8,0.4)] transition-all flex items-center justify-center gap-2 mx-auto" id="btn-start" onclick="startGame()">
                    <span class="material-symbols-outlined">playing_cards</span>
                    Deal Hand
                </button>
            </div>
        </div>

        <!-- Result Overlay -->
        <div class="absolute inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-md hidden" id="result-overlay">
            <div class="text-center space-y-6 animate-zoom-in p-8 border border-white/10 bg-black/90 rounded-2xl shadow-2xl max-w-sm w-full mx-4">
                <h2 class="text-4xl font-black font-display text-white tracking-tighter italic drop-shadow-[0_0_30px_rgba(255,255,255,0.4)]" id="result-title">
                    YOU WIN!
                </h2>
                <div class="text-white/50 font-mono" id="result-desc">Full House</div>
                <div class="pt-4">
                    <button class="w-full px-8 py-4 bg-yellow-500 text-black font-black uppercase tracking-widest rounded-xl hover:bg-white hover:scale-105 transition-all flex items-center justify-center gap-2" onclick="closeOverlay()">
                        Next Hand
                        <span class="material-symbols-outlined">arrow_forward</span>
                    </button>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        function createCardHtml(card, index, isNew) {
            const animationClass = isNew ? 'animate-zoom-in' : '';
            const styleDelay = isNew ? `animation-delay: ${index * 100}ms; animation-fill-mode: backwards;` : '';

            if (!card || card.isHidden) {
                 return `<div class="w-16 h-24 md:w-20 md:h-28 bg-[#1a1a1a] rounded-lg border-2 border-white/10 flex items-center justify-center shadow-lg relative overflow-hidden ${animationClass}" style="${styleDelay}">
                            <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_25%,rgba(255,255,255,0.05)_50%,transparent_75%)] bg-[length:250%_250%] animate-pulse"></div>
                            <div class="text-2xl text-white/20 font-display">?</div>
                        </div>`;
            }

            const isRed = card.suit === 0 || card.suit === 1; 
            const colorClass = isRed ? 'text-red-500 border-red-500/30' : 'text-accent-cyan border-accent-cyan/30';
            const shadowClass = isRed ? 'shadow-[0_0_10px_rgba(239,68,68,0.15)]' : 'shadow-[0_0_10px_rgba(34,211,238,0.15)]';
            
            const suits = ['‚ô•', '‚ô¶', '‚ô£', '‚ô†'];
            const suitSymbol = suits[card.suit];
            
            let rankStr = card.rank;
            if (card.rank === 11) rankStr = 'J';
            else if (card.rank === 12) rankStr = 'Q';
            else if (card.rank === 13) rankStr = 'K';
            else if (card.rank === 14) rankStr = 'A';

            return `<div class="w-16 h-24 md:w-20 md:h-28 bg-[#151515] rounded-lg border-2 flex flex-col items-center justify-center relative ${colorClass} ${shadowClass} ${animationClass}" style="${styleDelay}">
                        <div class="absolute top-1 left-1 flex flex-col items-center text-[0.6rem] font-bold leading-none">
                            <span>${rankStr}</span>
                            <span>${suitSymbol}</span>
                        </div>
                        <div class="text-3xl drop-shadow-md">${suitSymbol}</div>
                        <div class="absolute bottom-1 right-1 flex flex-col items-center text-[0.6rem] font-bold leading-none rotate-180">
                            <span>${rankStr}</span>
                            <span>${suitSymbol}</span>
                        </div>
                    </div>`;
        }

        function updateUI(data) {
            // Render Cards with basic diffing (replace all for now, optimize if needed)
            document.getElementById('player-cards').innerHTML = data.playerHole.map((c, i) => createCardHtml(c, i, true)).join('');
            document.getElementById('dealer-cards').innerHTML = data.dealerHole.map((c, i) => createCardHtml(c, i, true)).join('');
            document.getElementById('community-cards').innerHTML = data.community.map((c, i) => createCardHtml(c, i, true)).join('');
            
            // Chips
            document.getElementById('player-chips').innerText = data.playerChips;
            document.getElementById('dealer-chips').innerText = data.dealerChips;
            document.getElementById('pot-amount').innerText = data.pot;
            
            document.getElementById('game-status-text').innerText = `${data.stage}`;

            // Message Bubble
            if (data.message && data.message.includes("Dealer")) {
                const bubble = document.getElementById('dealer-msg');
                bubble.innerText = data.message;
                bubble.classList.remove('opacity-0');
                setTimeout(() => bubble.classList.add('opacity-0'), 3000);
            }

            // Game End Overlay
            if (data.stage === 'GameOver' || (data.winner !== null && data.winner !== "")) {
                const ol = document.getElementById('result-overlay');
                document.getElementById('result-title').innerText = data.message; 
                document.getElementById('result-desc').innerText = `Pot: ${data.pot}`;
                
                document.getElementById('game-controls').classList.add('hidden');
                document.getElementById('start-area').classList.add('hidden');
                
                setTimeout(() => {
                    ol.classList.remove('hidden');
                    ol.classList.add('flex');
                }, 1500);
            } else {
                document.getElementById('result-overlay').classList.add('hidden');
                document.getElementById('result-overlay').classList.remove('flex');
                
                document.getElementById('game-controls').classList.remove('hidden');
                document.getElementById('game-controls').classList.add('flex');
                document.getElementById('start-area').classList.add('hidden');
                
                // Disable buttons
                const btns = document.querySelectorAll('.action-btn');
                btns.forEach(b => {
                    b.disabled = !data.turn;
                    if(!data.turn) {
                        b.classList.add('opacity-50', 'cursor-not-allowed');
                    } else {
                        b.classList.remove('opacity-50', 'cursor-not-allowed');
                    }
                });
            }
        }

        async function startGame() {
            try {
                const response = await fetch('/holdem/start', { 
                    method: 'POST',
                    headers: { 'RequestVerificationToken': document.getElementsByName('__RequestVerificationToken')[0]?.value }
                });
                if (!response.ok) { alert(await response.text()); return; }
                const data = await response.json();
                updateUI(data);
            } catch (err) { console.error(err); }
        }

        async function sendAction(action) {
            try {
                const response = await fetch('/holdem/action', { 
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': document.getElementsByName('__RequestVerificationToken')[0]?.value },
                    body: JSON.stringify(action)
                });
                const data = await response.json();
                updateUI(data);
            } catch (err) { console.error(err); }
        }

        function closeOverlay() {
            document.getElementById('result-overlay').classList.add('hidden');
            document.getElementById('result-overlay').classList.remove('flex');
            document.getElementById('start-area').classList.remove('hidden');
            document.getElementById('btn-start').innerHTML = `<span class="material-symbols-outlined">playing_cards</span> Deal New Hand`;
        }
    </script>
}
