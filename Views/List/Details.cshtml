@model GameLoggd.Models.Domain.UserList

@{
    ViewData["Title"] = Model.Title;
}

<div class="w-full relative">
    <!-- Hero Background -->
    <div class="absolute inset-0 h-[400px] overflow-hidden -z-10">
        <div class="absolute inset-0 bg-gradient-to-b from-primary/10 to-background-dark"></div>
        <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 mix-blend-overlay"></div>
    </div>

    <div class="page-container py-12 px-6 max-w-[1400px] mx-auto min-h-screen">
        <!-- Header -->
        <div class="flex flex-col md:flex-row gap-8 items-start mb-12">
            <!-- Icon/Cover -->
            <div class="shrink-0 size-32 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center shadow-2xl shadow-primary/10">
                <span class="material-symbols-outlined text-5xl text-primary drop-shadow-[0_0_10px_rgba(13,242,51,0.5)]">format_list_bulleted</span>
            </div>
            
            <div class="flex-1 w-full">
                <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-6">
                    <div>
                         <h1 class="text-4xl md:text-5xl font-black text-white tracking-tighter uppercase drop-shadow-lg mb-2">@Model.Title</h1>
                         <div class="flex flex-wrap items-center gap-4 text-sm text-white/60 font-mono">
                             <div class="flex items-center gap-2">
                                 <div class="size-6 rounded-full bg-accent-purple flex items-center justify-center text-[10px] text-white font-bold">
                                     @Model.User.UserName.ToUpper()[0]
                                 </div>
                                 <a href="/user/@Model.User.UserName" class="text-white hover:text-primary transition-colors font-bold">@Model.User.UserName</a>
                             </div>
                             <span>//</span>
                             <span>@Model.Items.Count games</span>
                             <span>//</span>
                             <span>Updated @Model.UpdatedAt.ToString("MMM yyyy")</span>
                         </div>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <!-- Like Button -->
                         <form action="/list/like" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="listId" value="@Model.Id" />
                            <button type="submit" class="h-10 px-4 rounded-lg border border-white/10 flex items-center gap-2 transition-all hover:bg-white/10 @(ViewBag.IsLiked == true ? "text-red-500 border-red-500/50 bg-red-500/10" : "text-white/60")">
                                <span class="material-symbols-outlined text-[20px] @(ViewBag.IsLiked == true ? "fill-current" : "")">favorite</span>
                                <span class="font-bold font-mono">@ViewBag.LikeCount</span>
                            </button>
                        </form>

                        @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.User.UserName)
                        {
                             <a href="/list/@Model.Id/add" class="h-10 px-4 flex items-center gap-2 bg-primary text-background-dark rounded-lg font-bold uppercase tracking-wider text-sm hover:bg-white hover:text-black transition-all">
                                 <span class="material-symbols-outlined text-[20px]">add</span>
                                 <span>Add Games</span>
                             </a>
                             <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this list?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="size-10 flex items-center justify-center rounded-lg border border-red-500/30 text-red-500 hover:bg-red-500/10 transition-colors" title="Delete List">
                                    <span class="material-symbols-outlined text-[20px]">delete</span>
                                </button>
                            </form>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="mt-6 text-white/80 text-lg leading-relaxed max-w-3xl border-l-2 border-primary/50 pl-4">@Model.Description</p>
                }
            </div>
        </div>
        
        <!-- Game Grid -->
        <div class="border-t border-white/10 pt-10">
            @if (Model.Items.Any())
            {
                @await Html.PartialAsync("_GameGrid", Model.Items.Select(i => i.Game).ToList())
            }
            else
            {
                <div class="flex flex-col items-center justify-center py-24 bg-white/5 border border-white/10 border-dashed rounded-2xl">
                    <span class="material-symbols-outlined text-4xl text-white/20 mb-4">playlist_add</span>
                    <p class="text-white/40 text-lg font-medium mb-4">This list is currently empty.</p>
                    @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.User.UserName)
                    {
                        <a href="/list/@Model.Id/add" class="text-primary hover:text-white font-bold underline decoration-primary/30 hover:decoration-white transition-colors">Search for games to add â†’</a>
                    }
                </div>
            }
        </div>
    </div>
</div>
