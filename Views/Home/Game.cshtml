@model GameLoggd.Models.ViewModels.GameDetailViewModel
@{
    ViewData["Title"] = Model.Game.Title;
}

<div class="relative w-full">
    <!-- Cinematic Header Background -->
    <div class="absolute top-0 left-0 w-full h-[500px] overflow-hidden -z-10">
        <div class="w-full h-full bg-center bg-cover scale-110 blur-xl opacity-40" 
             style='background-image: url("@(string.IsNullOrEmpty(Model.Game.ImagePath) ? "/images/placeholder_game.jpg" : Model.Game.ImagePath)");'>
        </div>
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-background-dark/60 to-background-dark"></div>
    </div>

    <div class="max-w-[1200px] mx-auto px-6 pt-12 pb-20">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
            <!-- Left Column: Poster -->
            <div class="md:col-span-3">
                <div class="sticky top-24">
                    <div class="aspect-[2/3] w-full rounded-xl overflow-hidden shadow-2xl border border-white/10 relative group">
                        <div class="w-full h-full bg-center bg-cover transition-transform duration-700 group-hover:scale-105" 
                             style='background-image: url("@(string.IsNullOrEmpty(Model.Game.ImagePath) ? "/images/placeholder_game.jpg" : Model.Game.ImagePath)");'>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Middle Column: Content -->
            <div class="md:col-span-6 flex flex-col gap-6">
                <!-- Title & Meta -->
                <div>
                    <h1 class="text-5xl md:text-6xl font-black text-white tracking-tighter uppercase font-display leading-[0.9] mb-2">
                        @Model.Game.Title
                    </h1>
                    <p class="text-primary text-lg font-medium tracking-wide flex items-center gap-2">
                        <span>@(Model.Game.Year?.ToString() ?? "N/A")</span>
                        <span class="w-1 h-1 rounded-full bg-white/30"></span>
                        <span>@(string.IsNullOrWhiteSpace(Model.Game.Developer) ? "Unknown Developer" : Model.Game.Developer)</span>
                    </p>
                </div>

                <!-- Description -->
                <div class="prose prose-invert prose-p:text-white/70 max-w-none">
                    <p>@Model.Game.Description</p>
                </div>

                <!-- Stats Row -->
                <div class="grid grid-cols-3 gap-4 py-6 border-y border-white/10">
                    <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold text-white/40 uppercase tracking-widest">Rating</span>
                        <div class="flex items-center gap-2">
                            <span class="text-3xl font-black text-white">@Model.AverageRating.ToString("0.0")</span>
                            <div class="flex text-primary text-xs">
                                @for (int i = 0; i < 5; i++)
                                {
                                    double val = Model.AverageRating - i;
                                    <span class="material-symbols-outlined text-[16px]" style="font-variation-settings: 'FILL' @(val >= 1 ? 1 : 0)">@(val >= 1 ? "star" : (val >= 0.5 ? "star_half" : "star"))</span>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold text-white/40 uppercase tracking-widest">Logs</span>
                        <span class="text-3xl font-black text-white">@Model.Reviews.Count</span>
                    </div>
                    <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold text-white/40 uppercase tracking-widest">Ranked</span>
                        <span class="text-3xl font-black text-white">#--</span>
                    </div>
                </div>
                
                 <!-- Genres & Platforms -->
                 <div class="flex flex-wrap gap-2">
                    @foreach(var g in Model.Game.Genres)
                    {
                        <a href="/games?genre=@g.Name" class="px-3 py-1 bg-white/5 hover:bg-white/10 border border-white/10 rounded-full text-xs font-bold text-white/70 hover:text-white transition-colors uppercase tracking-wider">
                            @g.Name
                        </a>
                    }
                 </div>
                 
                 <div class="flex flex-wrap gap-2">
                    @foreach(var p in Model.Game.Platforms)
                    {
                         <span class="px-2 py-1 bg-black/20 text-white/50 text-[10px] uppercase font-bold tracking-widest rounded border border-white/5">
                            @p.Name
                        </span>
                    }
                 </div>

                <!-- Community Feed Section -->
                <div class="mt-8 space-y-6">
                    <div class="flex items-center justify-between">
                         <h3 class="text-xl font-bold text-white uppercase tracking-tight flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">forum</span>
                            Community Reviews
                        </h3>
                    </div>

                    @if(Model.Reviews.Any())
                    {
                        <div class="space-y-4">
                            @foreach(var review in Model.Reviews)
                            {
                                <div class="bg-white/5 border border-white/10 p-5 rounded-xl hover:bg-white/10 transition-colors">
                                    <div class="flex gap-4">
                                        <a href="/user/@review.User?.UserName" class="size-10 rounded-full bg-black/20 shrink-0 overflow-hidden border border-white/10">
                                             <div class="w-full h-full bg-center bg-no-repeat bg-cover pixel-avatar" 
                                                 style='background-image: url("@(string.IsNullOrEmpty(review.User?.ProfilePicturePath) ? $"https://ui-avatars.com/api/?name={review.User?.UserName}&background=random" : review.User?.ProfilePicturePath)");'>
                                            </div>
                                        </a>
                                        <div class="flex-1 space-y-2">
                                            <div class="flex items-center justify-between">
                                                <div class="flex items-center gap-2">
                                                    <a href="/user/@review.User?.UserName" class="font-bold text-white hover:text-primary transition-colors">@review.User?.UserName</a>
                                                    <div class="flex text-primary">
                                                        @for (int i = 0; i < 5; i++)
                                                        {
                                                            double val = review.Rating - i;
                                                            <span class="material-symbols-outlined text-[14px]" style="font-variation-settings: 'FILL' @(val >= 1 ? 1 : 0)">@(val >= 1 ? "star" : (val >= 0.5 ? "star_half" : "star"))</span>
                                                        }
                                                    </div>
                                                </div>
                                                <span class="text-white/30 text-xs font-bold uppercase">@review.CreatedAt.ToString("MMM dd")</span>
                                            </div>
                                            <p class="text-white/80 text-sm leading-relaxed">@review.Content</p>
                                            
                                            <!-- Review Actions (Like/Comment) -->
                                            <div class="flex items-center gap-4 pt-2">
                                                 <form method="post" action="/review/like" class="contents">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="reviewId" value="@review.Id" />
                                                    <button type="submit" class="flex items-center gap-1 text-xs font-bold uppercase tracking-wider @(review.IsLikedByCurrentUser ? "text-red-500" : "text-white/40 hover:text-white") transition-colors">
                                                        <span class="material-symbols-outlined text-base">favorite</span>
                                                        <span>@review.LikeCount</span>
                                                    </button>
                                                </form>
                                                <!-- Add comment button/modal trigger here if needed -->
                                            </div>
                                            
                                            <!-- Comments -->
                                            @if(review.Comments.Any())
                                            {
                                                <div class="pl-4 border-l-2 border-white/10 mt-3 space-y-2">
                                                    @foreach(var comment in review.Comments)
                                                    {
                                                        <div class="text-xs">
                                                            <span class="font-bold text-accent-cyan">@comment.User?.UserName:</span>
                                                            <span class="text-white/60">@comment.Content</span>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="p-8 text-center text-white/40 border border-white/10 rounded-xl bg-white/5 border-dashed">
                            No reviews yet. Be the first to share your thoughts!
                        </div>
                    }
                </div>
            </div>

            <!-- Right Column: Dashboard -->
            <div class="md:col-span-3 space-y-6">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="bg-background-dark/50 backdrop-blur-md border border-white/10 p-6 rounded-xl sticky top-24">
                        <div class="flex flex-col gap-3">
                             <form method="post" action="/game/@Model.Game.Slug/log" class="w-full">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="status" value="Played" />
                                <button type="submit" class="w-full py-4 rounded-lg bg-white/5 border border-white/10 hover:border-primary hover:bg-primary/10 hover:text-primary transition-all flex items-center justify-center gap-2 group @(Model.CurrentUserStatus?.Status == GameLoggd.Models.Domain.GameStatus.Played ? "border-primary bg-primary/10 text-primary" : "text-white")">
                                    <span class="material-symbols-outlined group-hover:scale-110 transition-transform">check_circle</span>
                                    <span class="font-bold uppercase tracking-wider text-sm">Played</span>
                                </button>
                            </form>
                            
                            <div class="grid grid-cols-2 gap-3">
                                <form method="post" action="/game/@Model.Game.Slug/log" class="w-full">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="status" value="Playing" />
                                     <button type="submit" class="w-full py-3 rounded-lg bg-white/5 border border-white/10 hover:border-accent-purple hover:text-accent-purple transition-all flex flex-col items-center justify-center gap-1 group @(Model.CurrentUserStatus?.Status == GameLoggd.Models.Domain.GameStatus.Playing ? "border-accent-purple text-accent-purple" : "text-white")">
                                        <span class="material-symbols-outlined text-lg">joystick</span>
                                        <span class="font-bold uppercase tracking-wider text-[10px]">Playing</span>
                                    </button>
                                </form>
                                 <form method="post" action="/game/@Model.Game.Slug/log" class="w-full">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="status" value="Backlog" />
                                    <button type="submit" class="w-full py-3 rounded-lg bg-white/5 border border-white/10 hover:border-accent-cyan hover:text-accent-cyan transition-all flex flex-col items-center justify-center gap-1 group @(Model.CurrentUserStatus?.Status == GameLoggd.Models.Domain.GameStatus.Backlog ? "border-accent-cyan text-accent-cyan" : "text-white")">
                                        <span class="material-symbols-outlined text-lg">bookmark</span>
                                        <span class="font-bold uppercase tracking-wider text-[10px]">Backlog</span>
                                    </button>
                                </form>
                            </div>

                            <button onclick="document.getElementById('reviewModal').showModal()" class="w-full mt-2 py-3 bg-primary hover:bg-white text-black font-bold uppercase tracking-wider rounded-lg transition-colors flex items-center justify-center gap-2">
                                <span class="material-symbols-outlined">rate_review</span>
                                Review
                            </button>
                        </div>
                        
                         @if (Model.CurrentUserReview != null)
                        {
                            <div class="mt-6 pt-6 border-t border-white/10">
                                <p class="text-xs text-white/50 uppercase font-bold tracking-widest mb-2">Your Review</p>
                                <div class="flex text-primary mb-2">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        double val = Model.CurrentUserReview.Rating - i;
                                        <span class="material-symbols-outlined text-[16px]" style="font-variation-settings: 'FILL' @(val >= 1 ? 1 : 0)">@(val >= 1 ? "star" : (val >= 0.5 ? "star_half" : "star"))</span>
                                    }
                                </div>
                                <p class="text-sm text-white/80 italic line-clamp-3">"@Model.CurrentUserReview.Content"</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="bg-background-dark/50 backdrop-blur-md border border-white/10 p-6 rounded-xl sticky top-24 text-center">
                        <p class="text-white/60 mb-4">Sign in to log, rate, and review games.</p>
                         <a href="/account" class="block w-full py-3 bg-primary text-black font-bold uppercase tracking-wider rounded-lg hover:bg-white transition-colors">
                            Sign In
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Review Modal (Using HTML5 <dialog>) -->
<style>
    #reviewModal {
        position: fixed;
        inset: 0;
        margin: 0;
        padding: 1rem;
        border: 0;
        background: transparent;
    }

    #reviewModal[open] {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<dialog id="reviewModal" class="bg-transparent backdrop:bg-black/80 backdrop:backdrop-blur-sm open:animate-in open:fade-in open:zoom-in-95 backdrop:animate-in backdrop:fade-in">
    <div class="w-full max-w-lg bg-[#1a1a1a] border border-white/10 rounded-2xl shadow-2xl overflow-hidden">
        <div class="p-6 border-b border-white/10 flex items-center justify-between">
            <h3 class="text-xl font-bold text-white uppercase tracking-tight">Rate & Review</h3>
            <form method="dialog">
                <button class="text-white/50 hover:text-white transition-colors">
                    <span class="material-symbols-outlined">close</span>
                </button>
            </form>
        </div>
        <form method="post" action="/game/@Model.Game.Slug/review" class="p-6 space-y-6">
            @Html.AntiForgeryToken()
            
            <div class="space-y-2 text-center">
                <label class="text-xs font-bold text-white/50 uppercase tracking-widest">Rating</label>
                <div class="flex flex-row-reverse justify-center gap-0 relative">
                     @for (double r = 5.0; r >= 0.5; r -= 0.5)
                    {
                        bool isHalf = (r % 1 != 0);
                        string inputId = $"rating-{r.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture)}";
                        
                        <input type="radio" id="@inputId" name="rating" value="@r.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture)" class="peer hidden" @(Model.CurrentUserReview?.Rating == r ? "checked" : "") required />
                        <label for="@inputId" class="cursor-pointer text-white/20 text-6xl peer-checked:text-primary peer-hover:text-primary peer-[.peer:checked~&]:text-primary peer-[.peer:hover~&]:text-primary transition-colors p-0 m-0 w-[0.5em] overflow-hidden relative inline-block h-[1em] leading-none" title="@r">
                            <span class="material-symbols-outlined absolute top-0 @(isHalf ? "left-0" : "right-0")" style="font-variation-settings: 'FILL' 1; width: 1em; height: 1em; font-size: 1em;">star</span>
                        </label>
                    }
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-xs font-bold text-white/50 uppercase tracking-widest">Your Thoughts</label>
                <textarea name="content" rows="4" class="w-full bg-black/40 border-white/10 rounded-lg text-white p-3 focus:ring-primary focus:border-primary placeholder:text-white/20 resize-none text-sm" placeholder="Write your review here...">@(Model.CurrentUserReview?.Content)</textarea>
            </div>

            <div class="flex justify-end gap-4 pt-2">
                <button type="button" onclick="document.getElementById('reviewModal')?.close()" class="px-6 py-2 rounded-lg text-white/60 hover:text-white hover:bg-white/5 transition-colors font-bold text-sm uppercase">Cancel</button>
                <button type="submit" class="px-6 py-2 rounded-lg bg-primary text-black font-bold text-sm uppercase tracking-wide hover:brightness-110">Post Review</button>
            </div>
        </form>
    </div>
</dialog>
