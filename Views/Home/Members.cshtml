@model List<GameLoggd.Models.ViewModels.MemberViewModel>
@{
    ViewData["Title"] = "Members";
}

<div class="page-container py-8 px-6 max-w-[1400px] mx-auto min-h-screen">
    
    <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-4">
        <h1 class="text-4xl md:text-5xl font-black text-white tracking-tighter uppercase drop-shadow-[0_0_15px_rgba(255,255,255,0.1)]">Community</h1>
        <div class="px-4 py-2 bg-white/5 rounded-full border border-white/10 text-accent-purple font-mono text-sm font-bold">
            @if(Model != null) { <span>@Model.Count members active</span> }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var item in Model)
            {
                 <div class="group relative bg-white/5 border border-white/10 rounded-2xl p-6 hover:bg-white/10 transition-all duration-300 hover:border-accent-purple/50 shadow-lg hover:shadow-accent-purple/10 flex items-center gap-4">
                    <!-- Avatar -->
                    <a href="/user/@item.User.UserName" class="relative shrink-0">
                         <div class="absolute -inset-1 bg-gradient-to-br from-accent-cyan to-accent-purple rounded-full opacity-0 group-hover:opacity-100 blur transition duration-500"></div>
                        <div class="relative size-16 rounded-full overflow-hidden bg-background-dark border-2 border-white/10 group-hover:border-white transition-colors flex items-center justify-center">
                            @if(!string.IsNullOrEmpty(item.User.ProfilePicturePath)) {
                                <img src="@item.User.ProfilePicturePath" class="w-full h-full object-cover" alt="@item.User.UserName" />
                            }
                            else {
                                <span class="font-display font-bold text-xl text-white">@(item.User.UserName?.Substring(0, 1).ToUpper() ?? "?")</span>
                            }
                        </div>
                    </a>
                    
                    <!-- Info -->
                    <div class="flex-1 min-w-0">
                        <a href="/user/@item.User.UserName" class="block text-lg font-bold text-white hover:text-accent-purple truncate transition-colors">@item.User.UserName</a>
                         <p class="text-white/40 text-xs font-bold uppercase tracking-wider">Member</p>
                    </div>

                    <!-- Action -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form method="post" action="/toggle-follow">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="targetId" value="@item.User.Id" />
                            <button type="submit" class="size-10 rounded-full flex items-center justify-center transition-all @(item.IsFollowing ? "bg-white/10 text-white hover:bg-red-500/20 hover:text-red-500" : "bg-primary text-black hover:bg-white")" title="@(item.IsFollowing ? "Unfollow" : "Follow")">
                                <span class="material-symbols-outlined text-[20px]">
                                    @(item.IsFollowing ? "person_remove" : "person_add")
                                </span>
                            </button>
                        </form>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <div class="flex flex-col items-center justify-center py-20 bg-white/5 border border-white/10 border-dashed rounded-2xl text-center">
            <span class="material-symbols-outlined text-4xl text-white/20 mb-4">groups</span>
            <p class="text-white/40 text-lg font-medium">No members found.</p>
        </div>
    }
</div>
