@model GameLoggd.Models.ViewModels.ManageProfileViewModel

@{
    ViewData["Title"] = "Manage Account";
}

<div class="page-container" style="max-width: 800px; padding-top: 3rem;">
    <div style="margin-bottom: 2rem;">
        <a href="/user/@User.Identity.Name" style="color: var(--text-secondary); font-size: 0.9rem; display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            Back to Profile
        </a>
        <h1>Manage Account</h1>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div style="padding: 1rem; border-radius: 8px; background: rgba(0, 255, 128, 0.1); border: 1px solid #00ff80; color: #00ff80; margin-bottom: 2rem;">
            @Model.StatusMessage
        </div>
    }

    <div style="display: grid; gap: 2rem;">
        <!-- Profile Info Section -->
        <div style="background-color: var(--bg-card); border: 1px solid var(--border-color); border-radius: 0.75rem; padding: 2rem;">
            <h2 style="margin-bottom: 1.5rem; font-size: 1.5rem; border-bottom: 1px solid var(--border-color); padding-bottom: 1rem;">Profile Information</h2>
            
            <form asp-action="UpdateProfile" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="color: #ff4444; margin-bottom: 1rem;"></div>
                
                <!-- Cover Photo -->
                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="CoverPhoto" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Cover Photo</label>
                    
                    <div style="display: flex; flex-direction: column; gap: 1rem; margin-bottom: 1rem;">
                        @if (!string.IsNullOrEmpty(Model.CoverPhotoPath))
                        {
                            <img src="@Model.CoverPhotoPath" alt="Current Cover" style="width: 100%; height: 150px; border-radius: 0.5rem; object-fit: cover; border: 2px solid var(--neon-purple);" />
                        }
                        
                         <input asp-for="CoverPhoto" type="file" accept="image/*" class="search-input" style="width: 100%; border-radius: 0.5rem; padding: 0.5rem;" />
                    </div>
                </div>

                <!-- Profile Picture -->
                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="ProfilePicture" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Profile Picture</label>
                    
                    <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <img src="@Model.ProfilePicturePath" alt="Current Avatar" style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover; border: 2px solid var(--neon-purple);" />
                        }
                        else
                        {
                             <div style="width: 80px; height: 80px; border-radius: 50%; background: #333; display: flex; align-items: center; justify-content: center; color: #888;">
                                 <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><circle cx="12" cy="8" r="5"></circle><path d="M20 21a8 8 0 1 0-16 0"></path></svg>
                             </div>
                        }
                        
                         <input asp-for="ProfilePicture" type="file" accept="image/*" class="search-input" style="flex: 1; border-radius: 0.5rem; padding: 0.5rem;" />
                    </div>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="Username" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Username</label>
                    <input asp-for="Username" class="search-input" style="width: 100%; border-radius: 0.5rem; padding: 0.75rem 1rem;" />
                    <span asp-validation-for="Username" style="color: #ff4444; font-size: 0.875rem;"></span>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="Email" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Email</label>
                    <input asp-for="Email" class="search-input" style="width: 100%; border-radius: 0.5rem; padding: 0.75rem 1rem;" />
                    <span asp-validation-for="Email" style="color: #ff4444; font-size: 0.875rem;"></span>
                </div>

                 <div style="margin-bottom: 1.5rem;">
                    <label asp-for="Bio" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Bio</label>
                    <textarea asp-for="Bio" class="search-input" rows="3" style="width: 100%; border-radius: 0.5rem; padding: 0.75rem 1rem;"></textarea>
                    <span asp-validation-for="Bio" style="color: #ff4444; font-size: 0.875rem;"></span>
                </div>

                <div style="display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn-primary">Save Changes</button>
                </div>
            </form>
        </div>

        <!-- Change Password Section -->
        <div style="background-color: var(--bg-card); border: 1px solid var(--border-color); border-radius: 0.75rem; padding: 2rem;">
            <h2 style="margin-bottom: 1.5rem; font-size: 1.5rem; border-bottom: 1px solid var(--border-color); padding-bottom: 1rem;">Change Password</h2>
            
            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="color: #ff4444; margin-bottom: 1rem;"></div>
                
                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="CurrentPassword" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Current Password</label>
                    <input asp-for="CurrentPassword" class="search-input" style="width: 100%; border-radius: 0.5rem; padding: 0.75rem 1rem;" />
                    <span asp-validation-for="CurrentPassword" style="color: #ff4444; font-size: 0.875rem;"></span>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="NewPassword" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">New Password</label>
                    <input asp-for="NewPassword" class="search-input" style="width: 100%; border-radius: 0.5rem; padding: 0.75rem 1rem;" />
                    <span asp-validation-for="NewPassword" style="color: #ff4444; font-size: 0.875rem;"></span>
                </div>

                <div style="margin-bottom: 1.5rem;">
                    <label asp-for="ConfirmNewPassword" style="display: block; margin-bottom: 0.5rem; color: var(--text-secondary); font-weight: 500;">Confirm New Password</label>
                    <input asp-for="ConfirmNewPassword" class="search-input" style="width: 100%; border-radius: 0.5rem; padding: 0.75rem 1rem;" />
                    <span asp-validation-for="ConfirmNewPassword" style="color: #ff4444; font-size: 0.875rem;"></span>
                </div>

                <div style="display: flex; justify-content: flex-end;">
                    <button type="submit" class="btn-secondary" style="border: 1px solid #ff4444; color: #ff4444;">Update Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
