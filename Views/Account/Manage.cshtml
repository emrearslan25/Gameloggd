@model GameLoggd.Models.ViewModels.ManageProfileViewModel

@{
    ViewData["Title"] = "Manage Account";
}

<div class="w-full min-h-screen pt-24 pb-12 px-4">
    <div class="max-w-3xl mx-auto space-y-8">
        
        <!-- Header -->
        <div class="flex flex-col gap-4">
            <a href="/user/@User.Identity.Name" class="inline-flex items-center gap-2 text-white/50 hover:text-primary transition-colors text-sm font-bold uppercase tracking-widest w-fit">
                <span class="material-symbols-outlined text-lg">arrow_back</span>
                Back to Profile
            </a>
            <h1 class="text-4xl font-bold font-display text-white tracking-tighter">Manage Account</h1>
        </div>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="p-4 rounded-lg bg-primary/10 border border-primary/20 text-primary flex items-center gap-3">
                <span class="material-symbols-outlined">check_circle</span>
                <span class="font-medium">@Model.StatusMessage</span>
            </div>
        }

        <div class="grid gap-8">
            <!-- Profile Info Section -->
            <div class="bg-white/5 border border-white/10 rounded-xl p-6 md:p-8 backdrop-blur-sm">
                <h2 class="text-2xl font-bold text-white mb-6 font-display flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary">person</span>
                    Profile Information
                </h2>
                
                <form asp-action="UpdateProfile" enctype="multipart/form-data" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 bg-red-500/10 p-4 rounded-lg border border-red-500/20 text-sm font-bold"></div>
                    
                    <!-- Cover Photo -->
                    <div class="space-y-3">
                        <label asp-for="CoverPhoto" class="block text-sm font-bold uppercase tracking-widest text-white/70">Cover Photo</label>
                        
                        <div class="space-y-4">
                            @if (!string.IsNullOrEmpty(Model.CoverPhotoPath))
                            {
                                <div class="relative w-full h-40 rounded-lg overflow-hidden border border-white/10 group">
                                    <img src="@Model.CoverPhotoPath" alt="Current Cover" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" />
                                    <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
                                </div>
                            }
                            
                            <div class="relative group">
                                <input asp-for="CoverPhoto" type="file" accept="image/*" 
                                    class="block w-full text-sm text-white/50 bg-black/20 border border-white/10 rounded-lg cursor-pointer focus:outline-none file:mr-4 file:py-3 file:px-4 file:rounded-l-lg file:border-0 file:text-xs file:font-bold file:uppercase file:bg-white/10 file:text-white hover:file:bg-primary hover:file:text-black transition-all" />
                            </div>
                        </div>
                    </div>

                    <!-- Profile Picture -->
                    <div class="space-y-3">
                        <label asp-for="ProfilePicture" class="block text-sm font-bold uppercase tracking-widest text-white/70">Avatar</label>
                        
                        <div class="flex items-center gap-6">
                            <div class="relative">
                                @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                                {
                                    <img src="@Model.ProfilePicturePath" alt="Current Avatar" class="w-24 h-24 rounded-full object-cover border-4 border-white/10 shadow-[0_0_15px_rgba(13,242,51,0.3)]" />
                                }
                                else
                                {
                                     <div class="w-24 h-24 rounded-full bg-white/5 border-4 border-white/10 flex items-center justify-center text-white/20">
                                         <span class="material-symbols-outlined text-4xl">person</span>
                                     </div>
                                }
                            </div>
                            
                            <div class="flex-1 relative group">
                                <input asp-for="ProfilePicture" type="file" accept="image/*"
                                    class="block w-full text-sm text-white/50 bg-black/20 border border-white/10 rounded-lg cursor-pointer focus:outline-none file:mr-4 file:py-3 file:px-4 file:rounded-l-lg file:border-0 file:text-xs file:font-bold file:uppercase file:bg-white/10 file:text-white hover:file:bg-primary hover:file:text-black transition-all" />
                            </div>
                        </div>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="Username" class="block text-xs font-bold uppercase tracking-widest text-white/50">Username</label>
                            <input asp-for="Username" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:bg-white/5 hover:border-white/30 transition-all font-medium" placeholder="Enter username..." />
                            <span asp-validation-for="Username" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="Email" class="block text-xs font-bold uppercase tracking-widest text-white/50">Email</label>
                            <input asp-for="Email" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:bg-white/5 hover:border-white/30 transition-all font-medium" placeholder="Enter email address..." />
                            <span asp-validation-for="Email" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>
                    </div>

                     <div class="space-y-2">
                        <label asp-for="Bio" class="block text-xs font-bold uppercase tracking-widest text-white/50">Bio</label>
                        <textarea asp-for="Bio" rows="4" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:bg-white/5 hover:border-white/30 transition-all font-medium resize-none" placeholder="Tell us about yourself..."></textarea>
                        <span asp-validation-for="Bio" class="text-red-500 text-xs font-bold mt-1 block"></span>
                    </div>

                    <div class="flex justify-end pt-4">
                        <button type="submit" class="bg-primary text-background-dark font-bold uppercase tracking-wider px-8 py-3 rounded-lg hover:bg-white hover:text-black hover:scale-105 active:scale-95 transition-all shadow-[0_0_20px_rgba(13,242,51,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.4)]">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>

            <!-- Change Password Section -->
            <div class="bg-white/5 border border-white/10 rounded-xl p-6 md:p-8 backdrop-blur-sm">
                <h2 class="text-2xl font-bold text-white mb-6 font-display flex items-center gap-3">
                    <span class="material-symbols-outlined text-primary">lock_reset</span>
                    Security
                </h2>
                
                <form asp-action="ChangePassword" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 bg-red-500/10 p-4 rounded-lg border border-red-500/20 text-sm font-bold"></div>
                    
                    <div class="space-y-2">
                        <label asp-for="CurrentPassword" class="block text-xs font-bold uppercase tracking-widest text-white/50">Current Password</label>
                        <input asp-for="CurrentPassword" type="password" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:bg-white/5 hover:border-white/30 transition-all font-medium" />
                        <span asp-validation-for="CurrentPassword" class="text-red-500 text-xs font-bold mt-1 block"></span>
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label asp-for="NewPassword" class="block text-xs font-bold uppercase tracking-widest text-white/50">New Password</label>
                            <input asp-for="NewPassword" type="password" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:bg-white/5 hover:border-white/30 transition-all font-medium" />
                            <span asp-validation-for="NewPassword" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>

                        <div class="space-y-2">
                            <label asp-for="ConfirmNewPassword" class="block text-xs font-bold uppercase tracking-widest text-white/50">Confirm Password</label>
                            <input asp-for="ConfirmNewPassword" type="password" class="w-full bg-black/20 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:bg-white/5 hover:border-white/30 transition-all font-medium" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-red-500 text-xs font-bold mt-1 block"></span>
                        </div>
                    </div>

                    <div class="flex justify-end pt-4">
                        <button type="submit" class="border border-red-500/50 text-red-400 font-bold uppercase tracking-wider px-8 py-3 rounded-lg hover:bg-red-500 hover:text-white hover:scale-105 active:scale-95 transition-all bg-red-950/20">
                            Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
